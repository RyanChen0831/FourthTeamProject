<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    let app = new Vue({
        el: '#app',
        data: {
            HotelData:{},
            hotelId:1,
        },
        mounted: function () {
            this.getData();
            console.log('mounted')
        },
        methods: {
            getData: function () {
                let self = this;
                var test = axios.get(`/api/PetHotelAPI/HotelDetail/${this.hotelId}`).then(response => {
                    self.HotelData = response.data; // Store the fetched data in the component's data property
                })
                console.log('getData');
            }
        }

    })
</script>