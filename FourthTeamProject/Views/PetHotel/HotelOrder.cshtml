<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    let app = new Vue({
        el: '#app',
        data: {
            orderData:{
                MemberId:null,
                PayId: null,
                InvoiceId:null,
            },

            orderDetailData:{
                
                HotelOrderId:null,
                HotelId:null,
                CheckIntime:null,
                CheckOutTime:null,
                OrderAmount:null,
                UnitPrice:null,
                DetailStatus:null,
                HotelName:null,
                HotelCatagoryName:null,
            },
            selectedPetTypeId:1,
            selectedPetHotels:null,

            //資料分類
            petHotelForDog:[],
            petHotelForCat:[],
            petHotelDatas:[],

            //時段確認
            showNotice: false,
            noticeText: '',
        },
        mounted: async function () {

            await this.getHotelDatas();
            this.InitialForm();
        },
        
        watch:{
            selectedPetTypeId: function (newVal, oldVal){
                console.log("new:",newVal);
                this.changeSelectedCategory(newVal);
                this.setChangedHoteltype();
            },
        },
        methods: {

            getHotelDatas: async function () {

                let self = this;
                var test = await axios.get('/api/PetHotelAPI').then(response => {
                    this.petHotelDatas = response.data; // Store the fetched data in the component's data property

                    console.log(this.petHotelDatas);
                    this.petHotelForDog = this.petHotelDatas.filter(data => data.catagoryID == 1);
                    this.petHotelForCat = this.petHotelDatas.filter(data => data.catagoryID == 2);

                })
                console.log('getData');
            },

            createOrder:function(){

                    this.formSubmit();
                    if (this.showNotice) {
                        console.log('中斷建立訂單');
                        return;
                    }

                    console.log('create Order');

                    this.orderData.MemberId = 1;
                    this.orderData.PayId = 1;
                    this.orderData.InvoiceId = 1;

                    axios.post('/api/PetHotelAPI/HotelOrderCreate',this.orderData)
                    .then( (response) => {
                        console.log('Order:',response);

                        this.orderDetailData.HotelOrderId = response.data.hoyelOrderId;
                        //this.orderDetailData.HotelId = 1;
                        //this.orderDetailData.CheckIntime =new Date( '2023-06-15 13:45:30.000');
                        //this.orderDetailData.CheckOutTime =new Date( '2023-06-16 13:45:30.000');
                        //this.orderDetailData.OrderAmount = 1;
                        //this.orderDetailData.UnitPrice = 1200;
                        //this.orderDetailData.DetailStatus = true;
                        //this.orderDetailData.HotelName = '測試中旅館名';
                        //this.orderDetailData.HotelCatagoryName = '貓';

                        axios.post('/api/PetHotelAPI/OrderDetailCreate',this.orderDetailData).then((x)=>console.log('OrderDetail:',x));
                    });
            },


            formSubmit: function () {

                this.checkCheckOutTimeValid();

                var hotelChosen = this.getHotelByID(this.orderDetailData.HotelId);

                console.log('chosenHotel:', hotelChosen);
                this.completeOrderDetail(hotelChosen);
                console.log('submit:', this.orderDetailData);
            },

            getHotelByID: function (hotelId) {
                var hotelChosen = this.petHotelDatas.find(h => h.id == hotelId);
                return hotelChosen;
            },

            completeOrderDetail: function (hotelData) {

                this.orderDetailData.HotelId = hotelData.id;
                this.orderDetailData.OrderAmount = 1;
                this.orderDetailData.UnitPrice = hotelData.unitPrice;
                this.orderDetailData.DetailStatus = true;
                this.orderDetailData.HotelName = hotelData.hotelName;
                this.orderDetailData.HotelCatagoryName = hotelData.hotelTypeName;
            },
            
            changeSelectedCategory:function(categoryID){
                switch(categoryID)
                {
                    case 1:
                        this.selectedPetHotels = this.petHotelForDog;
                        break;
                    case 2:
                        this.selectedPetHotels = this.petHotelForCat;
                        break;
                    default:
                        console.log('Invalid CategoryID has been found!!')
                        break;
                }
            },

            setChangedHoteltype:function(){
                this.orderDetailData.HotelId = this.selectedPetHotels[0].id;
            },

            InitialForm:function(){
                this.selectedPetHotels = this.petHotelForDog;
                console.log('set selectedPetHotels:', this.petHotelForDog);
                this.setChangedHoteltype();
            },

            checkCheckOutTimeValid: function()
            {
                var isInvalid = (this.orderDetailData.CheckOutTime <= this.orderDetailData.CheckIntime);
                this.showNotice = isInvalid;

                if (isInvalid)
                {
                    console.log("checkOut Time is invalid");
                    this.noticeText = '時間不正確,請確認是否有誤';
                    
                    this.orderDetailData.CheckOutTime = null;
                }
               
            },

        },

    })
</script>
