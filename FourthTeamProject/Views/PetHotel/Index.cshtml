<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    let app = new Vue({
        el: '#app',
        data: {
            petHotelDatas: [],
            test: 201,
        },
        mounted: function () {
            this.getData();
            console.log('mounted');
        },
        methods: {
            getData: function () {
                let self = this;
                var test = axios.get('/api/PetHotelAPI').then(response => {
                    self.petHotelDatas = response.data; // Store the fetched data in the component's data property
                })
                console.log('getData');
            }
        }
    })
</script>
