<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/saloncss/style.css" rel="stylesheet" />


<div id="app" class="container">
    @*<-----------操作頁面-------------->*@
    <div class="form-group">
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <th style="width:10%">編輯</th>
                    <th style="width:10%">美容服務</th>
                    <th style="width:10%">寵物類型</th>
                    <th>美容項目</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in SalonSolutionSalonDTO">
                    <template>
                        <td>
                            <button class="btn btn-primary" >編輯</button>
                        </td>
                        <td>{{item.salonSolutionName}}</td>
                        <td>{{item.Salons.salonCatagoryName}}</td>
                        <p>
                            {{item.Salons.salonName}}
                        </p>
                    </template>
                </tr>
            </tbody>
        </table>
    </div>


</div>


@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>

    <script>

        let app = new Vue({
            el: "#app",
            data: {
                SalonSolutionSalonDTO: [],

            },
            mounted: function () {
                let _this = this;
                _this.FilterSalonSolutionSalonDTO();
            },
            methods: {
                FilterSalonSolutionSalonDTO: function () {
                    let _this = this;
                    axios.get(`/api/SalonSolutionSalonEnterprise/GetSalonSolutionSalon`).then(response => _this.SalonSolutionSalonDTO = response.data)
                },



            }
        })
    </script>
    }