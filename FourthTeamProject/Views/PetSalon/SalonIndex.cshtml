@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.2/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>

    <script>
        let app = new Vue({
            el: "#app",
            data: {
                SalonSolutionDTO: [],
                SalonTypeDTO: [],
                member: [],
                SalonSolutionOrder: [],
                salonSolutionName: "",
                memberName: "",
                memberPhone: "",
                memberEmail: "",
                salonCatagoryName: "",
                rootPath: "/Salonimage/",
                imageSalonSolution: [
                    "DogGroomingL.jpg",
                    "DogGroomingS.jpg",
                    "CatGroomingL.jpg",
                    "CatGroomingS.jpg",
                ],
                imageDiscription: [
                    "DOGMaxDiscription.jpg",
                    "DOGMiniDiscription.jpg",
                    "CATMaxDiscription.jpg",
                    "CATMiniDiscription.jpg",
                ]
            },
            mounted: function () {
                let _this = this;
                axios.get(`/api/SalonClient/GetSalonClient`).then(response => _this.SalonSolutionDTO = response.data);
            },
            methods: {
                GetImageUrl: function (salonId) {
                    return `data:image/jpg;base64,${salonId}`;
                },
                getSalonData: function (salonSolutionId) {
                    let _this = this;
                    axios.get(`/api/SalonClient/GetSalonData/${salonSolutionId}`)
                        .then(response => {
                            _this.SalonTypeDTO = response.data;
                        })
                        .catch(error => {
                            console.error(error);
                        });
                },
                reserveAppointment(salonSolutionId) {
                    let _this = this;
                    _this.SalonSolutionOrder = null;
                    axios.get(`/api/SalonClient/GetSalonSolutionOrder/${salonSolutionId}`).then(response => _this.SalonSolutionOrder = response.data);
                    axios.get(`/api/SalonClient/GetCurrentMember`)
                        .then(response => {
                            _this.member = response.data;
                            if (_this.member !== "") {
                                if (_this.member && _this.SalonSolutionOrder) {
                                    //$("#InsertPage").modal('show');
                                    const url = `/PetSalon/SalonOrderCheck?member=${JSON.stringify(_this.member)}&orderData=${JSON.stringify(_this.SalonSolutionOrder)}`;
                                    window.location.href = url;

                                }
                            }
                            else {
                                const url = `/Member/Login`;
                                window.location.href = url;
                            }
                        });
                },

            }

        })
    </script>
    }
