    $(".upload-image").change(function () {
        var productId = $(this).data("product-id");
        var formData = new FormData();
        var files = $(this).get(0).files;

        // 添加上传的文件到FormData对象
        for (var i = 0; i < files.length; i++) {
            formData.append("file", files[i]);
        }

        // 使用AJAX请求发送FormData对象进行图片上传操作
        $.ajax({
            url: "@Url.Action("UploadImage", "productId")".replace("&#123;id&#125;", productId),
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                if (result.success) {
                    // Assuming 'imageUrl' is a field in the response object that contains the URL of the uploaded image
                    var imageUrl = result.imageUrl;

                    // Update the img tag for this product
                    $("#img_" + productId).attr("src", imageUrl);

                    alert("圖片上傳成功！");
                } else {
                    alert("圖片上傳失敗！");
                }
            },
            error: function () {
                alert("伺服器連線錯誤！");
            }
        });
    });
