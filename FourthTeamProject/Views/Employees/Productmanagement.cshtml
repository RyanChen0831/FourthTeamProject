@model IEnumerable<FourthTeamProject.PetHeavenModels.Product>

@{
    ViewData["Title"] = "Productmanagement";
}

@{
    ViewBag.Error = "找不到圖片";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no, email=no, date=no, address=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    @*<link href="~/css/ProductStyle/css/bksystem.css" rel="stylesheet" type="text/css" />*@
    <link href="~/css/ProductStyle/font/iconfont.css" rel="stylesheet" type="text/css" />
    <link href="~/css/ProductStyle/css/module.css" rel="stylesheet" type="text/css" />
    <link href="~/css/ProductStyle/css/pages.css" rel="stylesheet" type="text/css" />
    <title>商品管理</title>
    <script src="~/css/ProductStyle/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/css/ProductStyle/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/css/ProductStyle/js/HUpages.js" type="text/javascript"></script>
    <script src="~/css/ProductStyle/js/common.js" type="text/javascript"></script>
</head>

<body id="situation" style="height:100%  overflow-y:auto">
    <div class="pages-style">
    
        <div class="bk-con-menu " id="bk-con-menu">
        
            <div class="title-menu">商品上架系統</div>
            <div class="breadcrumb" id="breadcrumb">
                <ul class="clearfix menu-section menulist" id="menu-section">
                </ul>
            </div>
        </div>
    
        <div class="bk-con-message message-section" id="iframe_box">
          
            <form id="batchDeleteForm" method="post" action="@Url.Action("BatchDelete", "Product")">
                <button id="btnBatchDelete" class="btn button_btn btn-success float-left" type="button" onclick="confirmBatchDelete()">批量删除</button>
            </form>
            <div class="operation  mb15">
                <button  class="btn button_btn btn-success" type="button"><a asp-controller="Home" asp-action="Index">回到首頁</a></button>
                <a href="@Url.Action("Create")" class="btn btn-success">新增商品</a>   
                <a href="@Url.Action("PutOn")" class="btn btn-success">上架商品</a>
                <a href="@Url.Action("PutDown")" class="btn btn-success">下架商品</a>
            

              
            </div>

           
            <div class="page_content clearfix mb15 table-module">
                <table class="gallery table table_list table_striped table-bordered" id="">
                    <thead>
                        <tr>
                            <th>
                                <label>
                                    <input id="SelectAll" type="checkbox" class="ace"><span class="lbl"></span>
                                </label>
                            </th>
                            <th>商品名稱</th>
                            <th>商品規格</th>
                            <th>商品內容</th>
                            <th>單價</th>
                            <th>庫存</th>
                            <th>商品狀態</th>
                            <th>商品分類</th>
                            <th>商品類型</th>
                            <th>商品圖片</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="ace product-checkbox" value="@item.ProductId" />
                                    <span class="lbl"></span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductSpecification)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductContent)</td>
                                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                                <td>
                                    @if (item.ProductStatus)
                                    {
                                        <span>上架中</span>
                                    }
                                    else
                                    {
                                        <span>下架中</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ProductCatagory.ProductCatagoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductType.ProductTypeName)</td>
                                <td>
                                    <partial name="_ShowPhotoPartial" model="@item" />
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-primary">編輯</a>
                                    <a href="@Url.Action("Details", new { id = item.ProductId })" class="btn btn-info">明細</a>
                                    <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger">刪除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    function confirmBatchDelete() {
      
        var selectedIds = $(".product-checkbox:checked").map(function () {
            return $(this).val();
        }).get();

        if (selectedIds.length === 0) {
            alert("請選擇至少一個商品來刪除。");
            return;
        }

    
        if (confirm("確定要刪除選中的商品嗎？")) {
          
            $("#batchDeleteForm").submit();
        }
    }

    $(function () {
        $(document).ready(function () {
         
            $("#SelectAll").click(function () {
                
                var isChecked = $(this).prop("checked");

             
                $(".product-checkbox").prop("checked", isChecked);
            });
        });

        $("#situation").Hupage({
            slide: '#breadcrumb',
            padding: 15,
            menuModule: '#bk-con-menu',
            pagecontent: '.page_content',
            operation: '.operation',
            scrollbar: function (e) {
                e.niceScroll({
                    cursorcolor: "#dddddd",
                    cursoropacitymax: 1,
                    touchbehavior: false,
                    cursorwidth: "3px",
                    cursorborder: "0",
                    cursorborderradius: "3px",
                });
            },
            expand: function (thisBox, settings) {
                var pc = "";
                $(settings.pagecontent).css("margin-bottom") != null ? pc = parseInt($(settings.pagecontent).css("margin-bottom").replace("px", "")) : '';
                $(settings.pagecontent).css({ height: $(window).height() - $(settings.operation).outerHeight() - pc - (settings.padding * 2) })
                settings.scrollbar($(settings.slide) && $(settings.pagecontent));
            }
        });
    });


    $(document).ready(function () {
       
        $("#btnBatchDelete").click(function () {
          
            var selectedIds = $(".product-checkbox:checked").map(function () {
                return $(this).val();
            }).get();

            if (selectedIds.length === 0) {
                alert("請選擇至少一個商品來刪除。");
                return;
            }

            
            $.ajax({
                url: '@Url.Action("BatchDelete", "Product")',
                type: 'POST',
                data: JSON.stringify(selectedIds),
                contentType: 'application/json',
                success: function (result) {
                    if (result.success) {
                       
                        location.reload();
                    } else {
                       
                        alert(result.message);
                    }
                },
                error: function () {
                    alert("伺服器連線錯誤！");
                }
            });
        });
    });
  


    $(".upload-image").change(function () {
        var productId = $(this).data("product-id");
        var formData = new FormData();
        var files = $(this).get(0).files;

    
        for (var i = 0; i < files.length; i++) {
            formData.append("file", files[i]);
        }

       
        $.ajax({
            url: "@Url.Action("UploadImage", "productId")".replace("&#123;id&#125;", productId),
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                if (result.success) {
                 
                    var imageUrl = result.imageUrl;

               
                    $("#img_" + productId).attr("src", imageUrl);

                    alert("圖片上傳成功！");
                } else {
                    alert("圖片上傳失敗！");
                }
            },
            error: function () {
                alert("伺服器連線錯誤！");
            }
        });
    });
</script>
