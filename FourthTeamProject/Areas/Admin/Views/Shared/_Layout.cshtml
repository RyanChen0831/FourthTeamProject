@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Portal - Bootstrap 5 Admin Dashboard Template For Developers</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Portal - Bootstrap 5 Admin Dashboard Template For Developers">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- FontAwesome JS-->
    <script defer src="~/css/System/plugins/fontawesome/js/all.min.js"></script>


    <!-- App CSS -->
    <link id="theme-style" rel="stylesheet" href="~/css/System/css/portal.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/css/daterangepicker.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/style.css">

    <style>
        /* 調整左側頁面內容區域的寬度 */
        .app-sidepanel {
            width: 150px;
        }

        /* 調整其他內容區域的寬度 */
        .app-header-inner {
            padding-left: 420px;
        }

        .flex-container {
            display: flex;
            align-items: center;
            margin-right: 100px;
            width: 350px;
        }

   /*     .flex-container span {
                margin-right: px; /* 可根据需要调整间距 */
            }*/

    </style>
</head>

<body class="app">
    @RenderBody()
    <header class="app-header fixed-top">
        <div class="app-header-inner">
            <div class="container-fluid py-3">
                <div class="app-header-inner" id="header-top">
                    <div class="user-info flex-container">
                        <span><a class="nav-link text-capitalize" asp-controller="Employees" asp-action="EmployeeLogout">登出</a></span>
                        <span class="nav-link text-capitalize">使用者: @User.Identity.Name</span>
                    </div>


                    <div class="app-header-content">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                <a id="sidepanel-toggler" class="sidepanel-toggler d-inline-block d-xl-none" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="30" viewBox="0 0 30 50" role="img"><title>Menu</title><path stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"></path></svg>
                                </a>
                            </div><!--//col-->


                        </div><!--//row-->
                    </div><!--//app-header-content-->
                </div><!--//app-header-inner-->
            </div><!--//container-fluid-->

            <div id="app-sidepanel" class="app-sidepanel">
                <div id="sidepanel-drop" class="sidepanel-drop"></div>
                <div style="background-color:darkgrey" class="sidepanel-inner d-flex flex-column">
                    <a href="#" id="sidepanel-close" class="sidepanel-close d-xl-none">&times;</a>
                    <div class="app-branding">
                        <a asp-controller="Home" asp-action="" style="font-size:30px" class="app-logo">後臺管理</a>

                    </div><!--//app-branding-->
                    <nav id="app-nav-main" class="app-nav app-nav-main flex-grow-1">
                        <ul class="app-menu list-unstyled accordion" id="menu-accordion">

                            <li class="nav-item has-submenu">
                                <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
                                <a style="background-color:darkgrey" class="nav-link submenu-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#submenu-1" aria-expanded="true" aria-controls="submenu-1">
                                    <span class="nav-icon">
                                        <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-files" fill="" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M4 2h7a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H4z" />
                                            <path d="M6 0h7a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2v-1a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H6a1 1 0 0 0-1 1H4a2 2 0 0 1 2-2z" />
                                        </svg>
                                    </span>
                                    <span class="nav-link-text">商品&服務管理</span>
                                </a><!--//nav-link-->

                                <div style="background-color:darkgrey" id="submenu-1" class="submenu submenu-1 collapse show" style="padding-left:15px;" data-bs-parent="#menu-accordion">
                                    <ul class="submenu-list list-unstyled">

                                        <li class="submenu-item"><a asp-area="Admin" asp-controller="Employees" asp-action="Productmanagement" class="submenu-link">商品管理</a></li>
                                        <li class="submenu-item"><a asp-area="Admin" asp-controller="PetHotel" asp-action="index" class="submenu-link">旅館管理</a></li>

                                        <li class="submenu-item"><a asp-area="Admin" asp-controller="PetSalon" asp-action="index" class="submenu-link">寵物管理</a></li>


                                    </ul>
                                </div>



                        </ul><!--//app-menu-->
                        <li class="nav-item has-submenu">
                            <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
                            <a style="background-color:darkgrey" class="nav-link submenu-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#submenu-1" aria-expanded="true" aria-controls="submenu-1">
                                <span class="nav-icon">
                                    <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-files" fill="" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M4 2h7a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H4z" />
                                        <path d="M6 0h7a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2v-1a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H6a1 1 0 0 0-1 1H4a2 2 0 0 1 2-2z" />
                                    </svg>
                                </span>
                                <span class="nav-link-text">商品&服務管理</span>
                            </a><!--//nav-link-->

                            <div style="background-color:darkgrey" id="submenu-1" class="submenu submenu-1 collapse show" style="padding-left:15px;" data-bs-parent="#menu-accordion">
                                <ul class="submenu-list list-unstyled">

                                    <li class="submenu-item"><a asp-area="Admin" asp-controller="Employees" asp-action="Ordermanagement" class="submenu-link">商品管理</a></li>

                                </ul>
                            </div>

                        </li><!--//nav-item-->
                    </nav><!--//app-nav-->

                </div>

            </div><!--//app-wrapper-->
            <!-- Javascript -->
            <script src="~/css/System/plugins/popper.min.js"></script>

            <script src="~/css/System/plugins/bootstrap/js/bootstrap.min.js"></script>

            <!-- Charts JS -->
            <script src="~/css/System/plugins/chart.js/chart.min.js"></script>
            <script src="~/css/System/js/index-charts.js"></script>

            <!-- Page Specific JS -->
            <script src="~/css/System/js/app.js"></script>

            <script src="~/js/jquery-3.4.1.min.js"></script>
            <script src="~/js/popper.min.js"></script>
            <script src="~/js/bootstrap.min.js"></script>
            <script src="~/js/owl.carousel.min.js"></script>
            <script src="~/js/jquery.animateNumber.min.js"></script>
            <script src="~/js/jquery.waypoints.min.js"></script>
            <script src="~/js/jquery.fancybox.min.js"></script>
            <script src="~/js/aos.js"></script>
            <script src="~/js/moment.min.js"></script>
            <script src="~/js/daterangepicker.js"></script>

            <script src="~/js/typed.js"></script>
            <script src="~/js/custom.js"></script>
            @await RenderSectionAsync("Scripts", required: false)
            <script>
                $(document).ready(function () {
                    $("#sidepanel-toggler").click(function () {
                        $("#app-sidepanel").toggleClass("active");
                    });
                });
            </script>

</body>
</html>

